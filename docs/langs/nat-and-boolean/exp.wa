Boolean true
Boolean false

datatype Nat {
  zero
  add1(prev) -- { Nat prev }
}

Value x -- { Boolean x }
Value x -- { Nat x }

datatype Exp {
  add1(x) -- { disj { Exp x Value x } }
  sub1(x) -- { disj { Exp x Value x } }
  isZero(x) -- { disj { Exp x Value x } }
  if(p, t, f) -- {
    disj { Exp p Value p }
    disj { Exp t Value t }
    disj { Exp f Value f }
  }
}
