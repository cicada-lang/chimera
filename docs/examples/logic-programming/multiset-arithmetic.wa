clause Append([], t, t)
clause Append([a | d], t, out) -- {
  out = [a | res]
  Append(d, t, res)
}

clause Add(x, y, z) -- { Append(x, y, z) }

clause AddMany([], [])
clause AddMany([x], x)
clause AddMany([x, y | rest], out) -- {
  Add(x, y, z)
  AddMany([z | rest], out)
}

