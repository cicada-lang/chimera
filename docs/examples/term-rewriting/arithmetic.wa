rule arithmetic {
  add(a, zero()) => a
  add(a, add1(b)) => add1(add(a, b))
  mul(_, zero()) => zero()
  mul(a, add1(b)) => add(a, mul(a, b))
}

eval arithmetic(
  quote add(add1(zero()), add1(zero()))
)

eval arithmetic(
  quote mul(add1(zero()), add1(zero()))
)

eval arithmetic(
  quote add(add1(add1(zero())), add1(add1(zero())))
)

eval arithmetic(
  quote mul(add1(add1(zero())), add1(add1(zero())))
)
