{
  "name": "@cicada-lang/mo",
  "version": "0.3.17",
  "repository": "github:cicada-lang/mo",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "bin": {
    "mo": "bin/mo.js"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test:mo:docs": "test-runner snapshot './bin/mo.js run' 'docs/**/*.(mo|md)' --exclude 'docs/**/*.error.(mo|md)'",
    "test:mo:docs-error": "test-runner snapshot-error './bin/mo.js run' 'docs/**/*.error.(mo|md)'",
    "test:mo": "npm run test:mo:docs && npm run test:mo:docs-error",
    "test:node": "node --test",
    "test": "npm run test:node && npm run test:mo",
    "format": "prettier src --write"
  },
  "dependencies": {
    "@cicada-lang/framework": "^0.1.5",
    "@cicada-lang/partech": "^0.2.5",
    "@xieyuheng/command-line": "^0.0.10",
    "@xieyuheng/ty": "^0.1.20",
    "commonmark": "^0.30.0",
    "immutable": "^4.2.3",
    "lodash": "^4.17.21",
    "node-watch": "^0.7.3",
    "picocolors": "^1.0.0",
    "readdirp": "^3.6.0",
    "sjcl": "^1.0.8"
  },
  "devDependencies": {
    "@types/commonmark": "^0.27.5",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/sjcl": "^1.0.30",
    "@xieyuheng/test-runner": "^0.2.7",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.5"
  },
  "license": "GPL-3.0-or-later"
}
