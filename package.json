{
  "name": "@cicada-lang/whereabouts",
  "version": "0.2.35",
  "repository": "github:cicada-lang/whereabouts",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "bin": {
    "wa": "bin/wa.js"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test:ts": "vitest --dir src --threads false --run",
    "test:watch": "vitest --dir src --threads false",
    "test:coverage": "vitest --dir src --threads false --run --coverage ",
    "test:gui": "vitest --dir src --threads false --ui",
    "test:wa:tests": "test-runner snapshot './bin/wa.js run' 'tests/**/*.(wa|md)' --exclude 'tests/**/*.error.(wa|md)'",
    "test:wa:tests-error": "test-runner snapshot-error './bin/wa.js run' 'tests/**/*.error.(wa|md)'",
    "test:wa:std": "test-runner snapshot './bin/wa.js run' 'std/**/*.(wa|md)' --exclude 'std/**/*.error.(wa|md)'",
    "test:wa:std-error": "test-runner snapshot-error './bin/wa.js run' 'std/**/*.error.(wa|md)'",
    "test:wa:docs": "test-runner snapshot './bin/wa.js run' 'docs/**/*.(wa|md)' --exclude 'docs/**/*.error.(wa|md)'",
    "test:wa:docs-error": "test-runner snapshot-error './bin/wa.js run' 'docs/**/*.error.(wa|md)'",
    "test:wa": "npm run test:wa:tests && npm run test:wa:tests-error && npm run test:wa:std && npm run test:wa:std-error && npm run test:wa:docs && npm run test:wa:docs-error",
    "test": "npm run test:ts && npm run test:wa",
    "format": "prettier src --write"
  },
  "dependencies": {
    "@cicada-lang/framework": "^0.1.1",
    "@cicada-lang/partech": "^0.2.3",
    "@xieyuheng/command-line": "^0.0.10",
    "@xieyuheng/ty": "^0.1.20",
    "commonmark": "^0.30.0",
    "fast-deep-equal": "^3.1.3",
    "immutable": "^4.1.0",
    "node-watch": "^0.7.3",
    "picocolors": "^1.0.0",
    "readdirp": "^3.6.0",
    "readline-sync": "^1.4.10",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@types/commonmark": "^0.27.5",
    "@types/node": "^18.11.10",
    "@types/readline-sync": "^1.4.4",
    "@vitest/coverage-c8": "^0.25.3",
    "@vitest/coverage-istanbul": "^0.25.3",
    "@vitest/ui": "^0.25.3",
    "@xieyuheng/test-runner": "^0.2.7",
    "husky": "^8.0.2",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  },
  "license": "GPL-3.0-or-later"
}
